name: Test Raiden

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  test:
    name: Test with golang:alpine
    runs-on: ubuntu-latest 
    container:
      image: golang:alpine 

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Install Required Packages
        run: apk add --no-cache git

      - name: Set Up Environment
        run: |
          export GO111MODULE=on
          go mod tidy

      - name: Run Tests
        run: go test ./... -v
